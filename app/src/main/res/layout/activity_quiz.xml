<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ef8f43">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dale siguiente para comenzar"
        android:id="@+id/QuestionTextView"
        android:layout_above="@+id/AnswerText"
        android:layout_centerHorizontal="true"
        android:textColor="@color/NEGRO" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AnswerText"
        android:layout_above="@+id/AnswerButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Escribe aqui"
        android:textColor="@android:color/black"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Valorar respuesta"
        android:id="@+id/AnswerButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/boton_redondo"
        android:textColor="@color/NEGRO" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/AnswerTextView"
        android:layout_below="@+id/AnswerButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/NEGRO" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Siguiente"
        android:id="@+id/NextQuetionButton"
        android:layout_below="@+id/AnswerTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/boton_redondo"
        android:textColor="@color/NEGRO" />

</RelativeLayout>