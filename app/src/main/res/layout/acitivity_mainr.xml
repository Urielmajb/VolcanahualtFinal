<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorAccent"
    tools:context="com.example.hp.volcanahualt.Recycler">

    <android.support.v7.widget.RecyclerView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/listContainer"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/txtConoceVolcanes"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conoce los Volcanes"
        android:id="@+id/txtConoceVolcanes"
        android:textSize="30dp"
        android:fontFamily="monospace"
        android:textColor="@color/NEGRO"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/chinandega"
        android:src="@drawable/chinandega"
        android:layout_below="@+id/txtConoceVolcanes"
        android:layout_toLeftOf="@+id/listContainer"
        android:layout_toStartOf="@+id/listContainer"
        android:layout_marginTop="27dp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/leon"
        android:src="@drawable/leon"
        android:layout_below="@+id/chinandega"
        android:layout_alignLeft="@+id/chinandega"
        android:layout_alignStart="@+id/chinandega" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/masaya"
        android:layout_below="@+id/leon"
        android:layout_toLeftOf="@+id/listContainer"
        android:layout_toStartOf="@+id/listContainer"
        android:src="@drawable/masaya" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/managua"
        android:src="@drawable/managua"
        android:layout_below="@+id/masaya"
        android:layout_alignLeft="@+id/masaya"
        android:layout_alignStart="@+id/masaya" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/granada"
        android:src="@drawable/granada"
        android:layout_below="@+id/managua"
        android:layout_alignLeft="@+id/managua"
        android:layout_alignStart="@+id/managua" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/rivas"
        android:layout_below="@+id/granada"
        android:layout_alignLeft="@+id/granada"
        android:layout_alignStart="@+id/granada"
        android:src="@drawable/rivas" />

</RelativeLayout>